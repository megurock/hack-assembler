{
  "name": "hack-assembler",
  "version": "0.1.0",
  "description": "Compiles hack assembly to a binary format.",
  "repository": {
    "type": "git",
    "url": "https://github.com/megurock/hack-assembler.git"
  },
  "main": "index.js",
  "author": "Eiji Meguro",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "run-p dev:* server",
    "build": "run-s clean build-parallel",
    "server": "browser-sync start --server ./dist --files ./dist",
    "clean": "del-cli dist",
    "copy": "cpx \"src/static/**\" dist",
    "sass": "sass ./src/style:dist/style/",
    "ts": "tsc",
    "build-parallel": "run-p build:*",
    "build:copy": "yarn copy",
    "build:sass": "yarn sass --style=compressed --no-source-map",
    "build:ts": "yarn ts",
    "dev:copy": "yarn copy -w",
    "dev:sass": "yarn sass --watch",
    "dev:ts": "yarn ts --watch --sourceMap",
    "test": "jest --coverage",
    "test-watch": "yarn test --watchAll"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "browser-sync": "^2.27.10",
    "cpx": "^1.5.0",
    "del-cli": "^5.0.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
